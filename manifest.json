{
  "manifest_version": 3,
  "name": "多AI对话聚合器",
  "version": "1.0.0",
  "description": "在一个地方同时向多个AI（ChatGPT、Gemini、Claude等）提问并对比答案",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "system.display",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://claude.ai/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*",
        "https://deepseek.com/*",
        "https://poe.com/*",
        "https://bard.google.com/*"
      ],
      "js": ["content-scripts/injector.js", "content-scripts/iframe-injector.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["config.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "remove_headers",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}

